<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
  <%= will_paginate @tasks %>
</div>

<%= link_to "New task", new_task_path %>
<div>
<%= button_to "Sign Out", {:controller=> "sessions", :action=> "destroy"}, :method => :delete%>
</div>